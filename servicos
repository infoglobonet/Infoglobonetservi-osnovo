  <!-- ===================== SCRIPTS BÁSICOS DO SITE ===================== -->
  <script>
    // Ano automático no rodapé
    document.getElementById("year").textContent = new Date().getFullYear();

    // Eventos simples de tracking customizado
    function trackLeadClick(origin) {
      // GA4
      if (typeof gtag === "function") {
        gtag("event", "lead_click", {
          origin: origin
        });
      }
      // Meta Pixel
      if (typeof fbq === "function") {
        fbq("trackCustom", "LeadClick", { origin: origin });
      }
    }

    function trackFormSubmit() {
      // GA4
      if (typeof gtag === "function") {
        gtag("event", "form_submit", {
          form_name: "infoglobonet-contato"
        });
      }
      // Meta Pixel
      if (typeof fbq === "function") {
        fbq("track", "Lead");
      }
    }
  </script>

